<!--  查询用户最近一单的信息-->
  <select id="getLastCompleteOrderById" resultType="com.sky.entity.Orders">
    select id,number,status,user_id,
           address_book_id,order_time,
           checkout_time,pay_method,
           pay_status,amount,remark,
           phone,address,user_name,
           consignee,cancel_reason,
           rejection_reason,cancel_time,
           estimated_delivery_time,
           delivery_status,delivery_time,
           pack_amount,tableware_number,
           tableware_status from orders
    where status = 5 and user_id = #{user_id}
    order by checkout_time desc limit 0;
  </select>
<!--  查询历史订单详情-->
  <select id="getOrderByUserIdAndStatus" resultType="com.sky.entity.Orders">
    select select id,number,status,user_id,
      address_book_id,order_time,
      checkout_time,pay_method,
      pay_status,amount,remark,
      phone,address,user_name,
      consignee,cancel_reason,
      rejection_reason,cancel_time,
      estimated_delivery_time,
      delivery_status,delivery_time,
      pack_amount,tableware_number,
      tableware_status from orders
    <where>
        <if test="status != null">
          status = #{status}
        </if>
        <if test="userId != null">
          and userId = #{userId}
        </if>
    </where>
  </select>

<!--  订单支付-->
  <update id="orderPay">
    update orders
    <set>
      pay_status = 1,
      checkout_time = now(),
      <if test="payMethod != null">
        pay_method = #{payMethod}
      </if>
    </set>
    <where>
        <if test="orderNumber != null">
          order_number = #{orderNumber}
        </if>
    </where>
  </update>
<!--  添加订单信息-->
  <insert id="addOrder">
    insert into orders (status,number,user_id,
        address_book_id,order_time,
        pay_method,pay_status,
    delivery_status) values (
    #{status},#{number},#{userId},#{addressBookId},
    #{orderTime},#{payMethod},#{payStatus},
    #{deliveryStatus})
  </insert>
</mapper>

