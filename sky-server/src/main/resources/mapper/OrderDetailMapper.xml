<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sky.mapper.OrderDetailMapper">
  
  <resultMap type="com.sky.entity.OrderDetail" id="OrderDetailMap">
    <result property="id" column="id" jdbcType="INTEGER" />
    <result property="name" column="name" jdbcType="VARCHAR" />
    <result property="image" column="image" jdbcType="VARCHAR" />
    <result property="orderId" column="order_id" jdbcType="INTEGER" />
    <result property="dishId" column="dish_id" jdbcType="INTEGER" />
    <result property="setmealId" column="setmeal_id" jdbcType="INTEGER" />
    <result property="dishFlavor" column="dish_flavor" jdbcType="VARCHAR" />
    <result property="number" column="number" jdbcType="INTEGER" />
    <result property="amount" column="amount" jdbcType="VARCHAR" />
  </resultMap>

  <!--  根据订单编号查询订单详情-->
  <select id="getOrderDetailByOrderId" resultType="com.sky.entity.OrderDetail">
    select id,name,image,order_id,
    dish_id,setmeal_id,
    dish_flavor,number,
    amount from order_detail
    <where>
      <if test="orderId != null">
        order_id = #{orderId}
      </if>
    </where>
  </select>

  <!--  添加订单详情信息-->
  <insert id="addOrderDetail">
    insert into order_detail values (
    null,#{name},#{image},#{orderId},
    #{orderId},#{dishId},#{setmealId},
    #{dishFlavor},#{number},#{amount}
    )
  </insert>


  <!--条件筛选总记录数-->
  <select id="count" resultType="java.lang.Long">
  
  </select>
  
  <!--查询指定行数据-->
  <select id="queryAllByLimit" resultMap="OrderDetailMap">
  
  </select>
  
  
  <!--新增数据-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
  
  </insert>
  
  <!--通过主键修改数据-->
  <update id="update">
  
  </update>
  
  <!--通过主键删除-->
  <delete id="deleteById">
  
  </delete>

</mapper>

