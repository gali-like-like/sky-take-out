<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sky.mapper.CategoryMapper">
    <sql id="query_category">
        select id,name,type,sort,status,create_time,update_time,create_user,update_user from category
    </sql>
    <!--新增数据-->
    <insert id="addCategory" keyProperty="id" useGeneratedKeys="true">
        insert into category (id,name,type,sort,create_user,update_user) values (Null,#{name},#{type},#{sort},1,1)
    </insert>

    <!--修改状态-->
    <update id="changeStatus">
        update category set status = #{status},
                            update_time = now(),update_user=1
        <where>
            id = #{id}
        </where>
    </update>

    <!--修改分类-->
    <update id="updateCategory">
        update category
        <set>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            update_time = now(),
            update_user = 1
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <!--删除分类-->
    <delete id="deleteCategoryById">
        delete from category where id = #{id}
    </delete>

    <!-- 根据类型查询-->
    <select id="queryByType" resultType="com.sky.entity.Category">
        <include refid="query_category" />
        <where>
            <if test="type != null">
                type = #{type}
            </if>
        </where>
    </select>

<!--    查询分页数据-->
    <select id="queryPageCategory" resultType="com.sky.entity.Category">
        <include refid="query_category" />
        <where>
            <if test="name != null">
                name like concat("%",#{name},"%")
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
        </where>
    </select>
<!--    根据id查询分类-->
    <select id="queryCategoryById" resultType="com.sky.entity.Category">
        <include refid="query_category" />
        <where>
            id = #{id}
        </where>
    </select>
</mapper>

